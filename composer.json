{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 7 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Arito Lima Melo",
            "role": "Software Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "docs": "https://drupal.org/project/atomium",
        "issues": "https://github.com/ec-europa/atomium/issues",
        "source": "https://drupal.org/project/atomium"
    },
    "require-dev": {
        "composer/installers": "^1.6",
        "drupal-composer/preserve-paths": "^0.1.5",
        "drupal/admin_menu": "3.0.0-rc6",
        "drupal/composer_autoloader": "^1.3",
        "drupal/devel": "^1.7",
        "drupal/drupal": "^7.65",
        "drupal/drupal-extension": "~4.0",
        "drupal/realistic_dummy_content": "^2",
        "drupol/drupal-conventions": "^1.4.6",
        "drupal/xautoload": "^5.7",
        "drush/drush": "^8.2",
        "mikey179/vfsstream": "^1.6",
        "openeuropa/task-runner": "1.0.0-beta5",
        "phpunit/phpunit": "^5.7",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3",
        "anahkiasen/underscore-php": "dev-master",
        "cweagans/composer-patches": "^1.6",
        "drupal/tmgmt": "~1.0.0-rc3",
        "nuvoleweb/robo-config": "~0.1",
        "peridot-php/leo": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\bw_d7\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\bw_d7\\": "./tests/src"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "scripts": {
        "post-update-cmd": "./vendor/bin/run drupal:site-setup",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "grumphp": "./vendor/bin/grumphp run"
    },
    "extra": {
        "installer-paths": {
            "build/": ["type:drupal-core"],
            "build/profiles/{$name}/": ["type:drupal-profile"],
            "build/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "build/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "build/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "build/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "preserve-paths": [
            "build/sites/all/drush",
            "build/sites/all/libraries",
            "build/sites/all/modules/contrib",
            "build/sites/all/modules/custom",
            "build/sites/all/modules/features",
            "build/sites/all/themes/contrib",
            "build/sites/all/themes/custom",
            "build/sites/all/translations",
            "build/sites/default"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "5.6"
        }
    }
}
